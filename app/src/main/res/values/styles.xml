<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Edittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/screen_margin_half</item>
        <item name="android:padding">@dimen/screen_margin_half_half</item>
        <item name="android:background">@drawable/background_edit_text_background</item>
    </style>

    <style name="ProgressBarTheme" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
