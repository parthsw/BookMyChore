<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="ViewHolderChoreServiceBinding" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_item_size"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/serviceContainer">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgServiceIcon"
            android:layout_width="@dimen/screen_margin_double"
            android:layout_height="@dimen/screen_margin_double" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_margin_half" />

    </LinearLayout>

</layout>